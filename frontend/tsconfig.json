{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": ".", 

    "paths": {
      "@/*": ["./src/*"],
      "@agents/*": ["./agents/*"],
      "@scraper/*": ["./scraper/*"],
      "@scripts/*": ["./scripts/*"]
    },

    "plugins": [
      { "name": "next" }
    ]
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/**/*",
    "agents/**/*",
    "scraper/**/*",
    "scripts/**/*",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts"
  ],

  "exclude": ["node_modules"]
}
